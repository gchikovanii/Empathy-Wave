@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager;

<nav class="navbar">
    <img src="logoo.png" alt="Logo" class="logo logo-small" />
    <div class="nav-content">
        <ul class="nav-links">
            <img src="logoo.png" alt="Logo" class="logo logo-big" />
            <li style="margin-left:20px"><NavLink class="custom-text" href="/" Match="NavLinkMatch.All">Home</NavLink></li>
            <li><NavLink class="custom-text" href="/shop">Shop</NavLink></li>
            <li><NavLink class="custom-text" href="/contact">Contact</NavLink></li>
        </ul>
        <div class="icons">
            <div class="icon profile-dropdown">
                <span class="icon profile"><i class="bi bi-person"></i></span>
                <div class="dropdown-content profile-dropdown-content">
                    @if (isAuthenticated)
                    {
                        <NavLink href="/logout" class="dropdown-link custom-bi"><i class="bi bi-box-arrow-right custom-bi"></i> Log out</NavLink>
                    }
                    else
                    {
                        <NavLink href="/login" class="dropdown-link custom-bi"><i class="bi bi-box-arrow-in-right custom-bi"></i> Log in</NavLink>
                        <NavLink href="/register" class="dropdown-link custom-bi"><i class="bi bi-person-plus custom-bi"></i> Register</NavLink>
                    }
                </div>
            </div>
            <span class="icon cart">
                <i class="bi bi-cart"></i>
                <span class="count">3</span>
            </span>
            <span class="icon heart">
                <i class="bi bi-heart"></i>
                <span class="count">5</span>
            </span>
            <div class="dropdown">
                <img src="geo.png" alt="Country Flag" class="flag" id="flag">
                <div class="dropdown-content">
                    <img src="geo.png" alt="Geo Flag" onclick="changeFlag('geo')" class="flag-option" id="geo-flag">
                    <img src="us.png" alt="US Flag" onclick="changeFlag('us')" class="flag-option" id="us-flag">
                </div>
            </div>
        </div>
    </div>
    <div class="burger">
        <span></span>
        <span></span>
        <span></span>
    </div>
</nav>

@code {
    private bool isAuthenticated;

    protected override async Task OnInitializedAsync()
    {
        // var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        isAuthenticated = false;
    }
}

<style>
@@import url('https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css');

    .custom-bi {
        font-size: 18px !important; 
    }
.logo-small {
    display: none;
}

.navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #FF69B4;
    padding: 20px 40px;
    color: #fff;
    position: relative;
}

.logo {
    max-height: 40px;
    max-width: 40px;
}

.nav-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

.nav-links {
    display: flex;
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.nav-links li {
    margin-right: 20px;
}

.nav-links a {
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    padding: 8px 16px;
}

.nav-links a.active,
.nav-links a:hover {
    color: #FF1493;
    border-radius: 5px;
}

.icons {
    display: flex;
    align-items: center;
}

.icon {
    margin-left: 20px;
    font-size: 24px;
    cursor: pointer;
    color: #fff;
    position: relative;
}

.icon .count {
    position: absolute;
    top: -5px;
    right: -5px;
    background-color: #FF1493;
    color: #fff;
    border-radius: 50%;
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
}

.icon:hover {
    color: #FF1493;
}

.profile-dropdown {
    position: relative;
}

.profile-dropdown:hover .profile-dropdown-content,
.profile-dropdown-content:hover {
    display: block;
}

.profile-dropdown-content {
    display: none;
    position: absolute;
    top: 30px;
    right: 0;
    background-color: #FF69B4;
    box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    z-index: 1;
    width:150px;
}

.profile-dropdown-content a {
    color: #fff;
    padding: 10px 16px;
    text-decoration: none;
    display: block;
    align-items: center; 
    gap: 3px; 
}

.profile-dropdown-content a:hover {
    background-color: #FF1493;
}

.dropdown {
    position: relative;
    display: inline-block;
    margin-left: 20px;
}

.flag {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    cursor: pointer;
}

.dropdown-content {
    display: none;
    position: absolute;
    top: 30px;
    right: 0;
    z-index: 1;
}

.flag-option {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    cursor: pointer;
    margin-bottom: 10px;
}

.dropdown.active .dropdown-content {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.burger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.burger span {
    height: 3px;
    width: 25px;
    background: #FF1493;
    margin: 5px 0;
    transition: 0.4s;
}

.custom-text {
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    font-size: 20px;
    font-weight: bold;
}

@@media screen and (max-width: 768px) and (orientation: portrait) {
    .logo-small {
        display: block;
    }

        .profile-dropdown-content {
            right: -40px; 
        }
    .logo-big {
        display: none;
    }

    .nav-content {
        display: none;
        flex-direction: column;
        width: 100%;
        position: absolute;
        top: 70px;
        left: 0;
        z-index: 1;
        background-color: #FF69B4;
    }

    .nav-links,
    .icons {
        width: 100%;
        text-align: center;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
    }

    .nav-links li {
        width: 100%;
    }

    .nav-links a,
    .icon {
        padding: 15px;
        margin: 0;
    }

    .search-container {
        width: 100%;
    }

    .search-container input {
        width: 100%;
    }

    .burger {
        display: flex;
    }

    .burger.active span:nth-child(1) {
        transform: rotate(-45deg) translate(-5px, 6px);
    }

    .burger.active span:nth-child(2) {
        opacity: 0;
    }

    .burger.active span:nth-child(3) {
        transform: rotate(45deg) translate(-5px, -6px);
    }

    .nav-content.active {
        display: flex;
    }

    .icons {
        margin-top: 20px;
    }

    .icon .count {
        top: 15px;
        right: 10px;
        width: 15px;
        height: 15px;
        font-size: 10px;
    }
}

    @@media (max-width: 480px) and (orientation: portrait) {
    .icons {
        flex-direction: row;
        justify-content: space-between;
        width: 100%;
        padding: 0 10px;
    }

    .icon {
        position: relative;
    }

    .icon .count {
        top: 15px;
        right: 10px;
        width: 15px;
        height: 15px;
        font-size: 10px;
    }

    .search-container {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }

    .dropdown {
        margin-left: 0;
    }

    .dropdown .flag {
        margin-right: 10px;
    }

    .icon {
        margin-left: 10px;
    }
}

@@media screen and (max-width: 1000px) and (orientation: landscape) {
    .logo-big {
        display: none;
    }

    .logo-small {
        display: block;
    }
}
</style>

<script>
    function changeFlag(flag) {
        const flagImg = document.getElementById('flag');
        const geoFlag = document.getElementById('geo-flag');
        const usFlag = document.getElementById('us-flag');

        if (flag === 'geo') {
            flagImg.src = 'geo.png';
            geoFlag.style.display = 'none';
            usFlag.style.display = 'block';
        } else if (flag === 'us') {
            flagImg.src = 'us.png';
            geoFlag.style.display = 'block';
            usFlag.style.display = 'none';
        }
    }

    document.addEventListener("DOMContentLoaded", () => {
        const geoFlag = document.getElementById('geo-flag');
        const usFlag = document.getElementById('us-flag');
        geoFlag.style.display = 'none';
        usFlag.style.display = 'block';
    });

    document.querySelector('.dropdown').addEventListener('click', () => {
        document.querySelector('.dropdown').classList.toggle('active');
    });

    document.querySelector('.burger').addEventListener('click', () => {
        document.querySelector('.nav-content').classList.toggle('active');
        document.querySelector('.burger').classList.toggle('active');
    });
</script>