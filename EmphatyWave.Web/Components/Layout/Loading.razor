@page "/loading"

<div class="loading-overlay">
    <div class="loader"></div>
    <h1>Load Bliadz</h1>
</div>

@code {
    [CascadingParameter] public bool IsLoading { get; set; }
}

<style>
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

   .loader {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(to right, red, blue 20%, transparent 20%, transparent 50%);
    background-size: 200% 200%;
    animation: wave 1.5s infinite linear;
}

@@keyframes wave {
    0% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
    100% {
        background-position: 0% 50%;
    }
}

</style>